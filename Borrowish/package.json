{
  "name": "borrow-app",
  "version": "1.0.0",
  "scripts": {
    "start": "node dist/server.js",
    "build-ts": "tsc",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm run install-client && npm run build-ts",
    "build-client": "cd client && npm run build",
    "install-client": "cd client && npm install",
    "client-test": "npm test --prefix client",
    "client": "cd client && npm start client",
    "server": "nodemon server/server.ts",
    "server-test": "mocha -r ts-node/register test/**/*.ts --exit",
    "test-dev": "nodemon --watch . --ext ts --exec \"mocha -r ts-node/register test/**/*.test.ts\"",
    "dev": "concurrently --kill-others-on-fail \"npm run server\" \"npm run client\""
  },
  "dependencies": {
    "@types/chai-http": "^4.2.0",
    "body-parser": "^1.19.0",
    "chai-http": "^4.3.0",
    "concurrently": "^5.1.0",
    "express": "^4.17.1"
  },
  "devDependencies": {
    "@types/chai": "^4.2.11",
    "@types/express": "^4.17.4",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.11.0",
    "chai": "^4.2.0",
    "eslint": "^6.8.0",
    "eslint-plugin-import": "^2.20.2",
    "mocha": "^7.1.1",
    "nodemon": "^2.0.2",
    "ts-node": "^8.8.2",
    "typescript": "^3.8.3"
  }
}
